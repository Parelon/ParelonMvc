                        </script>
                    </div>
                    <div class="col-xs-3">
                        <a href="https://telegram.me/share/url?url=@Context.Request.Host@Context.Request.Path"><img src="~/Content/Images/telegram_share_white.png" /></a>
                    </div>
                </div>
            </div>
