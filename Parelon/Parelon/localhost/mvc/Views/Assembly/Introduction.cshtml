{
    Html.RenderAction("TitleBar", "Bars", new { title = "Bentornato ciccio", subtitle = "Eccoti qua" });
}
else
{
    Html.RenderAction("TitleBar", "Bars", new { title = "Benvenuto curioso", subtitle = "Eccoti qua" });
}

<div class="row">
